prefix=@prefix@
datarootdir=@datarootdir@
datadir=@datadir@
export IBUS_HUNSPELL_TABLE_LOCATION=@datarootdir@/ibus-typing-booster

for arg in $@; do
	case $arg in
	--xml | -x)
		exec python @datarootdir@/ibus-typing-booster/engine/main.py --xml;;
	--help | -h)
		exec python @datarootdir@/ibus-typing-booster/engine/main.py $@;;
  *)
    # first running speedmeter as a daemon
    #python @datarootdir@/ibus-hunspell-table/engine/speedmeter.py -d > /dev/null

    # then start our IME
    exec python @datarootdir@/ibus-typing-booster/engine/main.py $@
    exit 0
	esac
done

